@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li><a href="/Manage/Index"><span class="glyphicon glyphicon-user"></span> Bonjour @User.Identity.GetUserName() !</a></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-log-out"></span> Se déconnecter</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="/Account/Register" id="registerLink"><span class="glyphicon glyphicon-user"></span> S'inscrire</a></li>
        <li><a href="/Account/Login" id="loginLink"><span class="glyphicon glyphicon-log-in"></span> Se connecter</a></li>
    </ul>
}
